---
import { ClientRouter } from "astro:transitions"; //Importamos ClientRouter para manejar las transiciones de página

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ClientRouter /> <!-- Agregamos el componente ClientRouter para manejar las transiciones de página -->
  </head>
  <body>
    <div>
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --acent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgba(var(--accent)),
      rgba(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    font-family: "Inter", sans-serif;
    background: #13151a;
    color: white;
  }

  body {
    @apply grid place-content-center p-20;
  }

  body > div {
    @apply container;
  }
</style>
